<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/header_text"
        app:titleTextColor="@android:color/white" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="@dimen/margin_16dp"
            android:src="@drawable/ic_coupons"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Insert your Code to obtain the coupons"
            android:layout_marginRight="@dimen/margin_32dp"
            android:layout_marginLeft="@dimen/margin_32dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-black"
            android:textSize="@dimen/text_view_size_16sp"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal|center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/code"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-black"/>
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_next"
                android:id="@+id/btn_code"/>
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_16dp"
            android:id="@+id/coupon1"
            android:src="@drawable/ic_couponsample"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_16dp"
            android:id="@+id/coupon2"
            android:src="@drawable/ic_couponsample"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_16dp"
            android:id="@+id/coupon3"
            android:src="@drawable/ic_couponsample"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_16dp"
            android:id="@+id/coupon4"
            android:src="@drawable/ic_couponsample"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_16dp"
            android:id="@+id/coupon5"
            android:src="@drawable/ic_couponsample"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>