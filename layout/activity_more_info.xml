<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.tuv01.travelguidealmeria.MoreInfoActivity"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white_blue">

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/margin_8dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/beach_1"
                android:contentDescription="@string/app_name"/>

            <RelativeLayout
                android:id="@+id/detail_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail_title_name"
                    style="@style/text_view_detail"
                    android:textSize="24sp"
                    tools:text="Cabo de Gata"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/colorPrimaryDark"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/transparent_black">

                <TextView
                    android:id="@+id/detail_address"
                    style="@style/text_view_detail"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_googlemaps"
                    android:textSize="14sp"
                    tools:text="Cabo de Gata, \nNijar, AlmerÃ­a" />

                <TextView
                    android:id="@+id/detail_tel"
                    style="@style/text_view_detail"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_telephon"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textSize="14sp"
                    tools:text="0034950123334" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/detail_web"
                    android:layout_gravity="center_vertical|center_horizontal"
                    style="@style/text_view_detail"
                    android:text="@string/button_web"
                    android:fontFamily="sans-serif-black"
                    android:drawableTop="@drawable/ic_website"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/detail_desc"
                style="@style/text_view_detail"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_32dp"
                android:textSize="16sp"
                tools:text="@tools:sample/lorem/random"/>

            <TextView
                android:id="@+id/detail_item_name"
                style="@style/text_view_detail"
                android:layout_marginTop="@dimen/margin_4dp"
                android:textSize="14sp"
                tools:text="@tools:sample/cities" />
        </LinearLayout>

</ScrollView>